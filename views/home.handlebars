
  {{> navbar}}

  <div id="homeContainer">
  
    <header>
      <h1 id="homeGreeting" data-id="{{id}}">Hello, {{name}}</h1>
      <div id="homefundbox">
        <h2 id="homeFunds" data-capital="{{fund.capital}}"> Total Funds: ${{format_amount fund.capital}}</h2>
      <div class="fundsControl">
        <button id="subtract">-</button>
        <input id="fundsInput">
        <button id="add" >+</button>
      </div>
      </div>
    </header>
  
    <div id="homeItemContainer">
      {{#each items}}
      <div onclick=" location.href='/home/item/{{id}}' " class="homeItemBox">
        <h3>{{name}}</h3>
        <div class="savedLine">
          <p class="greenFont">${{pledged}}</p>
          <p>saved out of</p>
          <p class="greenFont">${{cost}}</p>
        </div>
      </div>
      {{/each}}

    </div>

  </div>

<script src="./js/home.js"></script>