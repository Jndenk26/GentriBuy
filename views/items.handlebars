

  {{> navbar}}

  <div id="homeItemContainer">
    {{#each items as |item|}}
    <div id="itemPageContainer">
      <h1>{{name}}</h1>
      <div class="savedLine">
          <p class="greenFont">${{pledged}}</p>
          <p>saved out of</p>
          <p class="greenFont">${{cost}}</p>
      </div>
      <p>{{notes}}</p>
      <label for="addPledge">Add Money:</label>
      <input type="text" id="addPledge" name="addPledge" required>
      <input type="submit" value="Add">
    </div>
    {{/each}}
  </div>
